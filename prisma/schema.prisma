generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  password            String
  role                Role
  name                String
  phone               String?   @db.VarChar(191)
  city                String?   @db.VarChar(191)
  needsDescription    String?
  website             String?   @db.VarChar(191)
  donationPreferences String?
  createdAt           DateTime  @default(now())
  sessions            Session[]
}

enum Role {
  BENEFICIARY
  DONOR
}

model Session {
  id        String     @id @default(uuid())
  token     String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  userAgent String?
  ipAddress String?
  createdAt DateTime    @default(now())
  expiresAt DateTime
}